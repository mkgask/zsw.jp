
.page_title
    width 100%
    font-weight bold
    color #111
    border-top 5px #888 solid
    text-align center

.buttons_box
    width 100%
    text-align right

.buttons_box .button
    margin 0 1em
    padding 0.5em 1em
    border 1px #111 solid
    cursor pointer
    transition background-color 0.6s linear

.buttons_box .button.active
.buttons_box .button:hover
    background-color #111
    color #fff
    transition background-color 0.3s linear

.content_all
.content_pickup
    display flex
    justify-content left
    align-items top
    flex-wrap wrap

.content_box
    width 46%
    margin 2%
    min-height 185px
    text-decoration none
    overflow hidden

.content_link
    display flex
    justify-content center
    align-items middle
    width 100%
    height 100%
    min-height 185px
    background left center #fff no-repeat
    background-size contain
    color #111
    text-shadow 0 0 3px #fff, 0 0 3px #fff, 0 0 3px #fff, 0 0 3px #fff, 0 0 3px #fff

.content_image_box
    width 35%
    height 100%
    position relative

.content_image
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto
    max-width 100%
    max-height 100%

.content_text_box
    width 65%
    height 100%
    padding-left 1em

.content_title
    display inline-block
    width 100%
    padding 1em 0 0.5em
    text-align left
    font-weight bold

.content_body
    display inline-block
    width 100%
    padding 0.5em 0 1em
    text-align left

.datetime
    display inline-block
    width 100%
    padding 0.5em 0 1em
    text-align right

.firsttime
    margin-right 1em

.updatetime
    margin-right 1em

.content_niconico
    width 100%
    height 100%
    border none

.pager_box
    width 100%
    margin 1em 0
    text-align center

.read_next
    padding 0.5em 3em
    border 1px #666 solid
    cursor pointer

.read_next:hover
    background-color #111
    color #fff

@media (max-width: 850px)
    .content_box
        width 96%

    .content_image
        top 1em
        bottom auto
