
#nav
    font-family "Kosugi Maru"

#nav.active
    position fixed
    z-index 90
    right 0
    bottom 0
    height 100vh
    width 100vw
    background-color rgba(0, 0, 0, 0.5)
    background: linear-gradient(to top,  rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.5) 50%, rgba(0, 0, 0, 0) 100%)

#nav button
    position fixed
    z-index 100
    bottom 5%
    text-transform capitalize
    width 100vh
    max-width 100vw
    transform rotate(-75deg)
    padding 1.2em 0
    font-size 1.6em

#nav button /deep/ .v-btn__content
    justify-content flex-start
    align-items flex-end
    padding-left 45%

#nav button .sub
    margin-left 1em
    font-size 0.8em

#nav button.active
    display flex
    right -20%
    opacity 1

#nav button.deactive
    display flex
    right -30%
    opacity 0

@media (max-width: 850px)
    #nav button
        z-index 100
        right 0
        bottom 0
        width 100vw
        max-width 100vw
        transform none
        margin 0
        padding 0
        font-size 1.2em

    #nav button.active
        right 0
        bottom: 36px

    #nav button.deactive
        right 0
        bottom: -5%
