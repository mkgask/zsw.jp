#nav .nav_app.default
    animation: nav_app_default_animate 1.2s

#nav .nav_app.active
    opacity: 1
    background: linear-gradient(to right,  rgba(96, 96, 255, 1) 0%, rgba(96, 96, 255, 1) 50%, rgba(96, 96, 255, 0) 100%)
    color: #111
    animation: nav_app_active_animate 1.2s

#nav .nav_app.deactive
    right: -30%
    opacity: 0
    background: linear-gradient(to right,  rgba(96, 96, 255, 1) 0%, rgba(96, 96, 255, 1) 50%, rgba(96, 96, 255, 0) 100%)
    color: #111
    animation: nav_app_deactive_animate 1.2s

@keyframes nav_app_default_animate
    0%
        right: 15%
        opacity: 0
    100%
        right: -15%
        opacity: 1

@keyframes nav_app_active_animate
    0%
        right: -15%
        opacity: 1
    100%
        right: -20%
        opacity: 1

@keyframes nav_app_deactive_animate
    0%
        right: -15%
        opacity: 1
    100%
        right: -30%
        opacity: 0
