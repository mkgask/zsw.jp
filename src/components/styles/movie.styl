
.page_title
    width 100%
    font-weight bold
    color #111
    border-top 5px #888 solid
    text-align center

.content_box
    width 46%
    margin 2%
    min-height 185px
    text-decoration none
    overflow hidden

.content_niconico
    width 100%
    height 100%
    border none

.pager_box
    width 100%
    margin 1em 0
    text-align center

.read_next
    padding 0.5em 3em
    border 1px #666 solid
    cursor pointer

.read_next:hover
    background-color #111
    color #fff
